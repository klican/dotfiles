[core]
	editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[merge]
	tool = vimdiff

[alias]
    wdiff = diff --color-words
[alias]
    wshow = show --color-words

# colors from: http://jblevins.org/log/git-colors
[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

